{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Background)",
            "type": "npm",
            "script": "build",
            "group": "build",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "panel": "new",
                "close": true,
                "focus": false
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Lint (Background)",
            "type": "npm",
            "script": "lint",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "panel": "shared",
                "focus": false
            },
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "Dev Server",
            "type": "npm",
            "script": "dev",
            "isBackground": true,
            "presentation": {
                "reveal": "never",
                "panel": "shared",
                "focus": false,
                "group": "test"
            },
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Compiling...",
                    "endsPattern": "Compiled .*"
                }
            }
        }
    ]
}